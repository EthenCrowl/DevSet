# File name: main.py

<FloatLayout>:
    #pass

    Button:
        size_hint: .15,.9
        pos_hint: {"x": 0,"top": .9}
        text: "Hello World!"

    CodeInput:
        lexer: Python3Lexer()
        size_hint: .85,.9
        pos_hint: {"x": .15,"top": .9}

    BoxLayout:
        orientation: "horizontal"
        size_hint: 1,.1
        pos_hint: {"x": 0,"top": 1}

        Button:
            text: "Button 1"
            size: self.height,self.height
            pos: 0,0

        Button:
            text: "Button 2"
            size: self.height,self.height
            pos: 0+(self.height),0 

        Button:
            text: "Button 3"
            size: self.height,self.height
            pos: 0+(self.height*2),0